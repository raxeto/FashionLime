<%= form_for(@outfit_set, url: { action: action}, html: { multipart: true } ) do |f| %>
     Outfit Category <%= f.collection_select(:outfit_category_id, OutfitCategory.all.order("order_index"), :id, :name, { :include_blank => true }) %>
     <br>
     Occasion <%= f.collection_select(:occasion_id, Occasion.all.order("order_index"), :id, :name, { :include_blank => true }) %>
     <br>
     Description <%= f.text_area :description %>
     <br>
     Meta Title <%= f.text_field :meta_title %>
     <br>
     Meta Description <%= f.text_area :meta_description %>
     <br>
     OG Image <%= f.file_field :og_image %>
     <br>
     OG Image Preview
        <% if f.object.og_image.present? %>
          <%= image_tag f.object.og_image.url(:original) %> 
        <% end %>
     <br>
     <%= f.submit(action.to_s.capitalize) %>
<% end %>
