<h2>Outfit Sets</h2>

<%= link_to('Create New', new_admin_outfit_set_path) %>

<table class="centered">
  <thead>
    <tr>
      <th class="id">ID</th>
      <th class="text">Outfit Category</th>
      <th class="text">Occasion</th>
      <th class="text">Description</th>
      <th class="text">Meta Title</th>
      <th class="text">Meta Description</th>
      <th class="file">OG Image</th>
      <th class="date">Created</th>
      <th class="date">Updated</th>
      <th class="actions">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @outfit_sets.each do |s| %>
      <tr>
        <td class="id"> <%= s.id %> </td>
        <td class="text"> <%= s.outfit_category.try(:name) %> </td>
        <td class="text"> <%= s.occasion.try(:name) %> </td>
        <td class="text"> <%= truncate_string(s.description, 70) %> </td>
        <td class="text"> <%= s.meta_title %> </td>
        <td class="text"> <%= truncate_string(s.meta_description, 70) %> </td>
        <td class="file"> 
          <% if s.og_image.present? %>
            YES
          <% else %>
            NO
          <% end %>
        </td>
        <td class="date"> <%= date_to_s(s.created_at) %> </td>
        <td class="date"> <%= date_to_s(s.updated_at) %> </td>
        <td class="link"><%= link_to('edit', edit_admin_outfit_set_path(s.id)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
