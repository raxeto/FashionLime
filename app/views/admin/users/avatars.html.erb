<div>
  <%= form_tag admin_users_avatars_path, method: :get do %>
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= label_tag :from_date, "Добавени от" %>
          <%= date_field_tag :from_date, :value => @from_date, :class => "form-control" %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
         <%= label_tag :to_date, "до" %>
          <%= date_field_tag :to_date, :value => @to_date, :class => "form-control" %>
        </div>
      </div>
      <div class="col-sm-4">
        <button type="submit" class="btn btn-default">
          Търси
        </button>
      </div>
    </div>
  <% end %>

  <% if @users.present? %>
    <div class="row">
      <% @users.each do |user| %>
        <div class="avatar-container col-sm-3">
          <%= image_tag user.avatar.url(:medium), :class => "img-responsive" %>
          <div>
            <%= "#{user.username}, email: #{user.email}" %>
              <a type="button" onclick="FashionLime.Admin.User.avatars.delete(this, <%= user.id %>);">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
              </a>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

</div>
