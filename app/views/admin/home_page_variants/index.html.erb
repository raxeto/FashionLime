<h2>Home page variants</h2>

<%= link_to('Create New', new_admin_home_page_variant_path) %>

<table class="table centered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Home Page Links</th>
      <th>Collections</th>
      <th>Outfits</th>
      <th>Merchants</th>
      <th>Products</th>
      <th>Created</th>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @variants.each do |v| %>
      <tr>
        <td> <%= v.id %> </td>
        <td> <%= v.object_ids('HomePageLink').join(',') %> </td>
        <td> <%= v.object_ids('ProductCollection').join(',') %> </td>
        <td> <%= v.object_ids('Outfit').join(',') %> </td>
        <td> <%= v.object_ids('Merchant').join(',') %> </td>
        <td> <%= v.object_ids('Product').join(',') %> </td>
        <td class="date"> <%= date_to_s(v.created_at)%> </td>
        <td class="date"> <%= date_to_s(v.updated_at)%> </td>

        <td class="link"><%= link_to('delete', admin_home_page_variant_path(v.id), method: :delete, data: { confirm: "Are you sure?" }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
