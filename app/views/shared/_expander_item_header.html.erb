<span class="item-header">
  <% if info.present? %>
    <span class="item-info" data-toggle="popover" data-trigger="hover" data-content="<%= info %>">
      <i class="fa fa-info-circle"></i>
    </span>
  <% end %>
  <%= text %>
  <i class="fa fa-chevron-down expand-icon hidden-xs"></i>
  <i class="fa fa-chevron-up collapse-icon hidden-xs"></i>
</span>
