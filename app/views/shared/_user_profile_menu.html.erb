<div class="panel panel-default sidebar-menu">

    <div class="panel-heading">
        <h3 class="panel-title">Моето меню</h3>
    </div>

    <div class="panel-body">

        <ul class="nav nav-pills nav-stacked">
            <li class="<%= active_class_if_section(:my_orders) %>">
             <%= link_to orders_path do %>
                <i class="fa fa-list"></i> Моите поръчки
             <% end %>
            </li>
            <li class="<%= active_class_if_section(:my_outfits) %>">
              <%= link_to my_outfits_outfits_path do %>
                  <%= outfit_icon %>
                  Моите визии
              <% end %>
            </li>
            <% if user_signed_in? %>
                <li class="<%= active_class_if_section(:my_favorites) %>">
                    <%= link_to favorites_index_path do %>
                        <i class="fa fa-heart"></i> Харесани продукти и визии
                    <% end %>
                </li>
            <% end %>
            <li class="<%= active_class_if_section(:edit_profile) %>">
             <% if user_signed_in? %>
                  <%= link_to edit_user_registration_path do %>
                    <i class="fa fa-user"></i> Моят профил
                  <% end %>
             <% else %>
                  <%= link_to('#', {"data-toggle" => "modal", "data-target" => "#login-modal"}) do %>
                    <i class="fa fa-sign-in"></i> Влез
                  <% end %>
             <% end %>
            </li>
            <% if user_signed_in? %>
                <li class="<%= active_class_if_section(:edit_password) %>">
                    <%= link_to users_edit_password_path do %>
                        <i class="fa fa-lock"></i> Промяна на парола
                    <% end %>
                </li>
            <% end %>
            <li>
             <% if user_signed_in? %>
                 <%= link_to destroy_user_session_path, :method => :delete do %>
                    <i class="fa fa-sign-out"></i> Излез
                 <% end %>
              <% else %>
                 <%= link_to(new_user_registration_path) do  %>
                    <i class="fa fa-user"></i> Регистрирай се
                <% end %>
              <% end %>
            </li>
        </ul>
    </div>

</div>
